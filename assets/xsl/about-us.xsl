<?xml version="1.0" encoding="UTF-8"?><xsl:stylesheet version="1.0"	xmlns="http://www.w3.org/1999/xhtml"	xmlns:xsl="http://www.w3.org/1999/XSL/Transform"	xmlns:sfm="http://schema.slothsoft.net/farah/module">		<xsl:import href="farah://slothsoft@farah/xsl/module"/>		<xsl:variable name="lang" select="/*/*[@name='request']/request/@lang"/>		<xsl:template match="/sfm:fragment">		<div data-dict=".//html:h3" class="characterContainer">			<xsl:apply-templates select="sfm:error" mode="sfm:html"/>			<xsl:for-each select="*[@name='staff-content']/sfm:resource-directory/sfm:resource">				<xsl:apply-templates select="document(@url)"/>			</xsl:for-each>		</div>	</xsl:template>		<xsl:template match="staff">		<article class="characterSheet paintedBox" id="{name}">			<img src="/getAsset.php/slothsoft@slothsoft/static/staff-images/{name}" alt="{name}"/>			<h2><xsl:value-of select="name"/></h2>			<section>				<h3>About Me</h3>				<xsl:copy-of select="bio[lang($lang)]/node()"/>			</section>			<section>				<h3>Online IDs</h3>				<ul>					<xsl:for-each select="link">						<li>							<a href="{@href}" rel="external" target="_blank"><xsl:value-of select="@name"/></a>							<small>								<xsl:if test="note[lang($lang)]">									<xsl:text> (</xsl:text>									<xsl:value-of select="note[lang($lang)]"/>									<xsl:text>)</xsl:text>								</xsl:if>							</small>						</li>					</xsl:for-each>				</ul>			</section>		</article>	</xsl:template></xsl:stylesheet>