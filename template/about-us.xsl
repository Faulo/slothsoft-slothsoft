<?xml version="1.0" encoding="UTF-8"?><xsl:stylesheet version="1.0"	xmlns="http://www.w3.org/1999/xhtml"	xmlns:xsl="http://www.w3.org/1999/XSL/Transform">		<xsl:variable name="lang" select="/data/request/@lang"/>		<xsl:template match="/data">		<div data-dict=".//html:h3" class="characterContainer">			<xsl:apply-templates select="resourceDir/staff"/>		</div>	</xsl:template>	<xsl:template match="staff">		<article class="characterSheet paintedBox" id="{name}">			<img src="/getResource.php/slothsoft/staff-avatars/{name}" alt="{name}"/>			<h2><xsl:value-of select="name"/></h2>			<section>				<h3>About Me</h3>				<xsl:copy-of select="bio[lang($lang)]/node()"/>			</section>			<section>				<h3>Online IDs</h3>				<ul>					<xsl:for-each select="link">						<li>							<a href="{@href}" rel="external" target="_blank"><xsl:value-of select="@name"/></a>							<small>								<xsl:if test="note[lang($lang)]">									<xsl:text> (</xsl:text>									<xsl:value-of select="note[lang($lang)]"/>									<xsl:text>)</xsl:text>								</xsl:if>							</small>						</li>					</xsl:for-each>				</ul>			</section>				</article>	</xsl:template></xsl:stylesheet>