<?xml version="1.0" encoding="UTF-8"?><xsl:stylesheet version="1.0"	xmlns="http://www.w3.org/1999/xhtml"	xmlns:xsl="http://www.w3.org/1999/XSL/Transform">	<xsl:template match="/data">		<xsl:variable name="currentDomain" select="*[@data-cms-name='/core/sites']/domain[@active]"/>		<div>			<xsl:attribute name="class">				<xsl:text>navi</xsl:text>				<xsl:if test="$currentDomain/@current">					<xsl:text> current</xsl:text>				</xsl:if>			</xsl:attribute>			<xsl:apply-templates select="$currentDomain"/>				</div>	</xsl:template>		<xsl:template match="domain | page">		<xsl:variable name="childPages" select="page[@status-active][@status-public or .//page[@current]]"/>		<xsl:if test="self::page">			<xsl:attribute name="class">				<xsl:if test="$childPages and (descendant-or-self::*[@current] or @redirect)">					<xsl:text>open</xsl:text>				</xsl:if>				<xsl:if test="$childPages and not(descendant-or-self::*[@current] or @redirect)">					<xsl:text>close</xsl:text>				</xsl:if>				<xsl:if test="@ext">					<xsl:text>extern</xsl:text>				</xsl:if>				<xsl:if test="@current">					<xsl:text> current</xsl:text>				</xsl:if>			</xsl:attribute>		</xsl:if>		<xsl:choose>			<xsl:when test="@redirect">				<span data-dict=""><xsl:value-of select="@title"/></span>			</xsl:when>			<xsl:when test="@current">				<a href="{@uri}" data-dict="" class="bold"><xsl:value-of select="@title"/></a>			</xsl:when>			<xsl:when test="@ext">				<a href="{@ext}" data-dict="" class="extern"><xsl:value-of select="@title"/></a>			</xsl:when>			<xsl:otherwise>				<a href="{@uri}" data-dict=""><xsl:value-of select="@title"/></a>			</xsl:otherwise>		</xsl:choose>				<xsl:if test="$childPages and (descendant-or-self::*[@current] or @redirect)">			<ul>				<xsl:for-each select="$childPages">					<li>						<xsl:apply-templates select="."/>					</li>				</xsl:for-each>			</ul>		</xsl:if>	</xsl:template></xsl:stylesheet>